    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
            &kp Q       &kp W       &kp F         &kp P           &kp B       &kp J                 &kp L         &kp U         &kp Y       &kp DEL
     &kp N1  &hs LGUI A  &hm LALT R  &hm LSHIFT S  &hm LCTRL T     &kp G       &kp M                 &hm RCTRL N   &hm RSHIFT E  &hm RALT I  &hs RGUI O &kp N6
     &kp N2  &kp Z       &kp X       &kp C         &kp D           &kp V       &kp K                 &kp H         &kp COMMA     &kp DOT     &kp ENTER &kp N5
                                    &kp N3         &lt NUMBER TAB  &kp SPACE   &lt SYMBOLS_SWE BSPC  &lt FUNC ESC &kp N4
            >;
        };

        qwerty_layer {
            bindings = <
            &kp Q       &kp W       &kp E         &kp R           &kp T       &kp Y                 &kp U         &kp I         &kp O       &kp P
     &none  &hs LGUI A  &hm LALT S  &hm LSHIFT D  &hm LCTRL F     &kp G       &kp H                 &hm RCTRL J   &hm RSHIFT J  &hm RALT L  &hs RGUI BSPC &none
     &none  &kp Z       &kp X       &kp C         &kp V           &kp B       &kp N                 &kp M         &kp COMMA     &kp DOT     &kp ENTER &none
                                           &none  &lt NUMBER TAB  &kp SPACE   &lt SYMBOLS_SWE BSPC  &lt FUNC ESC &none
            >;
        };

        gaming_layer {
            bindings = <
            &kp N1      &kp N2  &kp N3  &kp N4     &kp N5     &kp J            &kp L        &kp U         &kp Y       &kp BSPC
     &none  &kp TAB     &kp Q   &kp W   &kp E      &kp R      &kp M            &hm RCTRL N  &hm RSHIFT E  &hm RALT I  &hs RGUI O &none
     &none  &kp LSHIFT  &kp A   &kp S   &kp D      &kp F      &kp M            &kp N        &kp E         &kp I       &kp O &none
                                 &none  &kp LCTRL  &trans     &mo SYMBOLS_SWE  &mo FUNC &none
            >;
        };

        symbols_eng_layer {
            bindings = <
            &kp DQT       &kp AT         &kp EXCL         &kp PLUS         &kp BSLH    &kp LPAR   &kp RPAR          &kp UNDER         &kp QMARK      &kp N0
     &none  &hs LGUI SQT  &hm LALT AMPS  &hm LSHIFT STAR  &hm LCTRL GRAVE  &kp LBKT    &kp MINUS  &hm RCTRL TILDE2  &hm RSHIFT EQUAL  &hm RALT PIPE  &hs RGUI N1 &none
     &none  &kp PRCNT     &kp HASH       &kp CARET        &kp DLLR         &kp RBKT    &kp LBRC   &kp RBRC          &kp GT            &kp LT         &kp N2 &none
                                                   &none  &kp FSLH         &trans      &trans     &trans &none
            >;
        };

        symbols_swe_layer {
            bindings = <
            &kp SE_DQT       &kp SE_AT         &kp SE_EXCL         &kp SE_PLUS         &kp SE_BSLH   &kp SE_LPAR   &kp SE_RPAR         &kp SE_UNDER         &kp SE_QMARK      &kp SE_AE
     &none  &hs LGUI SE_SQT  &hm LALT SE_AMPS  &hm LSHIFT SE_STAR  &hm LCTRL SE_GRAVE  &kp SE_LBKT   &kp SE_MINUS  &hm RCTRL SE_TILDE  &hm RSHIFT SE_EQUAL  &hm RALT SE_PIPE  &hs RGUI SE_AA &none
     &none  &kp SE_PRCNT     &kp SE_HASH       &kp SE_CARET        &kp SE_DLLR         &kp SE_RBKT   &kp SE_LBRC   &kp SE_RBRC         &kp SE_LT            &kp SE_GT         &kp SE_OO &none
                                                            &none  &kp SE_FSLH         &trans        &trans        &trans &none
            >;
        };

        func_layer {
            bindings = <
            &none     &kp F1  &kp F2   &kp F3   &kp F4     &kp HOME    &kp PG_UP  &kp UP      &kp PG_DN   &kp DEL
     &none  &none     &kp F5  &kp F6   &kp F7   &kp F8     &kp END     &kp LEFT   &kp DOWN    &kp RIGHT   &kp C_VOL_UP &none
     &none  &kp CAPS  &kp F9  &kp F10  &kp F11  &kp F12    &kp C_PREV  &kp C_PP   &kp C_NEXT  &kp K_MUTE  &kp C_VOL_DN &none
                                &none  &trans   &trans     &trans      &trans &none
            >;
        };

        number_layer {
            bindings = <
            &kp N1       &kp N2      &kp N3         &kp N4        &kp N5        &kp N6        &kp N7        &kp N8         &kp N9       &kp N0
     &none  &hs LGUI  N6 &hm LALT N7 &hm LSHIFT N8  &hm LCTRL N9  &kp N0        &kp SE_MINUS  &hm RCTRL N4  &hm RSHIFT N5  &hm RALT N6  &hm RGUI COMMA &none
     &none  &none        &none       &none          &none         &kp SE_EQUAL  &kp SE_PLUS   &kp N1        &kp N2         &kp N3       &kp DOT &none
                                             &none  &trans        &trans        &trans        &kp N0 &none
            >;
        };

        settings_layer {
            bindings = <
            &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4   &ext_power EP_ON  &ext_power EP_OFF  &none  &none       &none
     &none  &bt BT_CLR    &none         &none         &none         &none          &to QWERTY        &to DEFAULT        &none  &to GAMING  &none &none
     &none  &out OUT_BLE  &out OUT_USB  &none         &none         &bootloader    &bootloader       &none              &none  &none       &trans &none
                                               &none  &trans        &trans         &trans            &trans &none
            >;
        };
    };
};

